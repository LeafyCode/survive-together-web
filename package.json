  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "schema:download": "yarn run apollo client:download-schema schema.graphql",
    "types:generate": "yarn run apollo codegen:generate --target=typescript --tagName=gql --addTypename --localSchemaFile=schema.graphql --includes='src/graphql-types/*.ts' --globalTypesFile=src/graphql-types/generated/graphql-global-types.ts --outputFlat src/graphql-types/generated/\n",
    "types:refresh": "yarn schema:download && yarn types:generate"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
